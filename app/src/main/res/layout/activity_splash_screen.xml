<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appTheme"
    tools:context=".SplashScreenActivity"
    tools:ignore="Overdraw">



    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/appName"
        app:lottie_rawRes="@raw/animation"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"/>


    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:textSize="42sp"
        android:fontFamily="@font/baloo_chettan"
        android:text="STOCK CRUNCH"
        android:textColor="@color/appName"/>

    <TextView
        android:id="@+id/tagLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appName"
        android:textSize="24sp"
        android:fontFamily="@font/baloo_chettan"
        android:text="Your million-dollar shortcut"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/madeInNepal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textSize="24sp"
        android:fontFamily="@font/baloo_chettan"
        android:text="Made In Nepal"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/flag"
        android:layout_toEndOf="@id/madeInNepal"
        android:layout_alignParentBottom="true"
        android:contentDescription="TODO" />




</RelativeLayout>